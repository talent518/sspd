#!/bin/sh
#
# chkconfig: - 85 15
# description:SSP Server 1.0.1
# Comments to support LSB init script conventions

SSP_BIN=""{SSP_DIR}/ssp" -H -f "{SSP_DIR}/init.php""

# See how we were called.
case $1 in
  start|stop|restart|status)
    $SSP_BIN $1
    ;;
  serv_dir)
    echo "{SSP_DIR}"
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart|status|serv_dir}"
    exit 2
esac

exit $?